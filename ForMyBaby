<body>

    <div id="envelope" onclick="revealSurprise()">Click Me Wade ‚ù§Ô∏è</div>

    <div id="content">
        <h1>Happy Valentine's Day <br> my baby Wade</h1>
        <p>I Love You Always and Forever</p>
        <p style="font-size: 1.5rem;">Will you be my Valentine?</p>
        
        <div class="btn-container">
            <button class="btn" id="yesBtn" onclick="sayYes()">Yes! ‚ù§Ô∏è</button>
            <button class="btn" id="noBtn" onmouseover="moveNo()">No</button>
        </div>
    </div>

    <script>
        function revealSurprise() {
            document.getElementById('envelope').style.display = 'none';
            document.getElementById('content').style.display = 'block';
            setInterval(createRose, 300);
            
            // Initial position for NO button
            const noBtn = document.getElementById('noBtn');
            noBtn.style.left = (window.innerWidth / 2 + 50) + 'px';
            noBtn.style.top = (window.innerHeight / 2 + 100) + 'px';
        }

        function moveNo() {
            const noBtn = document.getElementById('noBtn');
            // Move it to a random spot
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 50);
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
        }

        function sayYes() {
            document.getElementById('content').innerHTML = "<h1>Yay! I knew it!</h1><p>I love you so much, Wade! ‚ù§Ô∏è‚ú®</p>";
            // Make it rain even more hearts
            setInterval(createRose, 100);
        }

        function createRose() {
            const rose = document.createElement('div');
            rose.className = 'rose';
            const icons = ['üåπ', 'üå∏', '‚ù§Ô∏è', 'üíñ'];
            rose.innerText = icons[Math.floor(Math.random() * icons.length)];
            rose.style.left = Math.random() * 100 + 'vw';
            rose.style.animationDuration = (Math.random() * 2 + 3) + 's';
            rose.style.fontSize = (Math.random() * 20 + 20) + 'px';
            document.body.appendChild(rose);
            setTimeout(() => rose.remove(), 5000);
        }
    </script>
</body>
