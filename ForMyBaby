        }

        /* Initial Envelope */
        #envelope {
            width: 200px;
            height: 140px;
            background-color: #d63384;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            cursor: pointer;
            color: white;
            font-size: 1.5rem;
            transition: transform 0.3s;
        }
        #envelope:hover { transform: scale(1.1); }

        /* Revealed Content */
        #content {
            display: none;
            z-index: 2;
            padding: 30px;
            background: rgba(255, 255, 255, 0.4);
            border-radius: 30px;
